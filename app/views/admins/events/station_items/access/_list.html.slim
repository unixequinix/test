.admin-card-wide.mdl-card.mdl-shadow--2dp
  table.mdl-data-table.mdl-js-data-table.within-card
    thead
      tr
        th.mdl-data-table__cell--non-numeric Name
        th Direction
        th Hidden
        - unless @current_event.launched?
          th

    tbody
      - @items.each do |gate|
        - path = admins_event_station_station_item_path(@current_event, gate.station_id, gate, item_type: "access_control_gate")

        tr class="#{'resource-hidden' if gate.hidden?}"
          td = gate.access.name
          td = best_in_place gate, :direction, as: :select, collection: [%w[1 In], %w[-1 Out]], url: path
          td = best_in_place gate, :hidden, best_in_place_checkbox(path)
          - unless @current_event.launched?
            td.table-actions
              .table-action
                = link_to admins_event_station_station_item_path(@current_event, @station, gate, item_type: "access_control_gate"), method: :delete, data: { confirm: t("alerts.confirm_delete") } do
                  button.icon.material-icons id ="delete_#{gate.id}" delete_forever



