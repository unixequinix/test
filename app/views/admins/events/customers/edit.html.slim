- content_for(:navigation_actions) do
  = link_to [:admins, @current_event, @customer], class: "mdl-button mdl-button--icon" do
    span#undo_link.icon.material-icons undo
    span.mdl-tooltip data-mdl-for="undo_link" Back

.content-grid.mdl-grid
  .mdl-layout-spacer
  .mdl-cell.mdl-cell--12-col
    .admin-card-wide.mdl-card.mdl-shadow--2dp.form-card
      = simple_form_for [:admins, @current_event, @customer], wrapper: :mdl_field_floating, wrapper_mappings: { text: :mdl_text_edit, boolean: :mdl_switch, file: :mdl_upload } do |f|
        .form-inputs
          = f.input :email
          = f.input :first_name
          = f.input :last_name

        .form-inputs
          = f.input :phone
          = f.input :postcode
          = f.input :address
          = f.input :city
          = f.input :country
          = f.input :gender, collection: %w(male female).map {|f| [t("gender." + f), f]}

        .form-actions
          = f.button :submit, class: "mdl-button mdl-js-button mdl-button--raised mdl-button--accent form-submit"
  .mdl-layout-spacer