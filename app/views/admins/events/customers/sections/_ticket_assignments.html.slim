.mdl-grid.light-grid
  .mdl-layout-spacer
  .mdl-cell.mdl-cell--10-col
    .admin-card-wide.mdl-card.mdl-shadow--2dp
      .mdl-card__title
        .mdl-cell.mdl-cell--4-col Admissions
        .mdl-cell.mdl-cell--8-col
      .table-responsive
        table.mdl-data-table.mdl-js-data-table.within-card
          thead
            tr
              th.mdl-data-table__cell--non-numeric Ticket
              th Ticket type
              th Redeemed
              th Banned
          tbody
            - customer.tickets.each do |ticket|
              tr
                td.mdl-data-table__cell--non-numeric data-label="Ticket"
                  = link_to ticket.code, admins_event_ticket_path(@current_event, ticket)
                  = link_to admins_event_ticket_assignment_path(@current_event, ticket), method: :delete, data: { confirm: t("alerts.confirm_delete") } do
                    button#revoke.icon.material-icons delete
                td data-label="Ticket type" = ticket.ticket_type.name
                td data-label="Redeemed" = best_in_place ticket, :redeemed, best_in_place_checkbox([:admins, @current_event, ticket])
                td data-label="Banned" = best_in_place ticket, :banned, best_in_place_checkbox([:admins, @current_event, ticket])
  .mdl-layout-spacer


