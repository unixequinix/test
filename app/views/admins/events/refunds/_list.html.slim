.admin-card-wide.mdl-card.mdl-shadow--2dp
  .mdl-card__title
    .mdl-cell.mdl-cell--4-col Refunds
    .mdl-cell.mdl-cell--8-col
      .tools
        .tool-item
          = link_to admins_event_refunds_path(@current_event, format: "csv")
            span#download.icon.material-icons file_download
            span.mdl-tooltip data-mdl-for="download" Download CSV
  .table-responsive
    table.mdl-data-table.mdl-js-data-table.within-card
      thead
        tr
          th.mdl-data-table__cell--non-numeric ID
          th Customer email
          th Status
          th Amount
          th Fee
          th Money
          th Created at
      tbody
        - refunds.each do |refund|
          tr
            td.mdl-data-table__cell--non-numeric data-label="ID" = link_to (refund.id), admins_event_refund_path(@current_event, refund)
            td data-label="Customer email" = link_to refund.customer.email, admins_event_customer_path(@current_event, refund.customer)
            td data-label="Status" = refund.status.humanize
            td data-label="Amount" = number_to_token refund.amount
            td data-label="Fee" = number_to_token refund.fee
            td data-label="Money" = number_to_event_currency refund.money
            td data-label="Created at" = l refund.created_at

