header
  .container-header
    = link_to href="#{t('event.url')}", target: "_blank", class: "bbf-logo" do
        = image_tag "bbf.png"

    h1.logo
      = image_tag "logo.png"

    ul.language-selection
      li
        a.language-selected = t('event.locales.en')
      li
        a = t('event.locales.es')
  nav.navigation-desktop
    ul
      li
        = link_to customer_root_path, class: "nav-link" do
          = t('header.menu')
      li
        = link_to href="#{t('event.url')}", target: "_blank", class:"nav-link" do
          = t('header.home')

      - if customer_signed_in?
        li.user-options
          span = current_customer.name
          ul.submenu
            li
              = link_to edit_customer_registration_path(current_customer), class: "link-submenu" do
                span = t('header.edit')
            li
              = link_to destroy_customer_session_path, method: :delete, class: "link-submenu" do
                span = t('header.close')