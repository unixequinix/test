= simple_form_for @customer, url: customer_event_registration_path(current_event), method: :post do |f|
  = f.error_notification
  .wrapper-field
    h3.customer-section-header = t('registration.new.title')
    .form-inputs
      .required-reminder
        p = t('registration.new.info')
        p
          = fa_icon "exclamation-circle"
          = t('registration.new.description')
      = f.input :event_id, as: :hidden, input_html: { value: current_event.id }
      = f.input :email, autofocus: true
      = f.input :name, autofocus: true
      = f.input :surname, autofocus: true
      = f.input :password
      = f.input :phone if(current_event.phone?)
      = f.input :address if(current_event.address?)
      = f.input :city if(current_event.city?)
      = f.input :country if(current_event.country?)
      = f.input :postcode if(current_event.postcode?)
      = f.input :gender, collection: Customer.gender_selector, include_blank: false if(current_event.gender?)
      = f.input :birthdate, as: :date, start_year: 1950,
        end_year: Date.today.year - 12,
        order: [:day, :month, :year] if(current_event.birthdate?)
      .accept-terms
        p
          = f.input :agreed_event_condition_message,as: :boolean, label: "#{current_event.agreed_event_condition_message}" if(current_event.agreed_event_condition?)
        p
          = f.input :agreed_on_registration, as: :boolean, label: ("#{t('conditions.action')} #{link_to t('conditions.terms_of_use'), event_terms_of_use_url, target: '_blank'} #{t('conditions.conjunction')} #{link_to t('conditions.privacy_conditions'), event_privacy_policy_url, target: '_blank'}").html_safe
      .container-button
        = f.button :submit, t('registration.new.button'), class: "btn-top"

