// Basic wrapper for single options like cancel account etc
.wrapper-single-option {

  .btn {
    vertical-align: middle;

    @include min-screen($bp3) {
      @include span-columns(4);
    }
  }

  p {
    vertical-align: middle;
    margin: 0;
    padding: 0;

    @include min-screen($bp3) {
      @include span-columns(8);
    }
  }
}

