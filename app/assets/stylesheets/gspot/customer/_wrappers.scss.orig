  text-align: center;

  //@include min-screen($bp3) {
  //  padding: 0 modules(7);
  //}

  i {
    @include mscale($base_font_size*2);
    display: block;
  }
}

.form-inputs {
  overflow: hidden;
  padding: modules(1);
}

.form-actions {
  clear: both;
  position: relative;
  overflow: hidden;
  display: block;
  width: 100%;
  text-align: center;
  font-family: Helvetica, sans-serif;

  &:hover { text-decoration: underline; }

  a { color: $black; }
  figure { display: inline-block; padding: 0 modules(0.25);}
}

// _____ ALIGN TO CENTER ALL ______

.centered {
  text-align: center;

  h3 { text-align: center; }
}

.customer_remember_me {
  display: inline-block;
  margin: 0 auto;
}

.copy-text {
  clear: both;
  width: 100%;
  padding-top: modules(0.5);
  box-shadow: inset 0px 1px 0px 0px rgba(0, 0, 0, 0.2);

  p { margin: 0; }
}

// ______ TERMS AND CONDITIONS _____

.wrapper-terms  {
  font-family: sans-serif;

  @include min-screen($bp3) {
    text-align: justify;
  }

  h3, ul {
    display: block;
    margin: 0;
    padding: 0;
  }

  h4 { margin-top: 0; }

  ol {
    margin-top: 0;
    padding: 0 modules(2);
  }

  a {
    color: $pinkMagenta;
    font-weight: bold;

    &:hover { text-decoration: underline; }
  }
}

.without-visual-style {
  width: 100%;
  margin-bottom: modules(1);

  th {
    padding: 0 modules(0.25);
    background-color: $black;
    color: $pinkMagenta;
  }

  td {
    padding: 0 modules(0.25);
    box-shadow: inset 0px 0px 0px 1px $black;
  }
}




