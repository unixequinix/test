[Unit]
Description=sidekiq
After=syslog.target network.target

[Service]
Type=simple
WorkingDirectory=/home/deploy/current
ExecStart=/usr/local/rvm/gems/ruby-2.4.1/wrappers/bundle exec sidekiq --index 0 --pidfile /home/deploy/shared/tmp/pids/sidekiq-0.pid --environment ENVIRONMENT --logfile /home/deploy/shared/log/sidekiq.log --config /home/deploy/current/config/sidekiq.yml
User=deploy
Group=deploy
UMask=0002

# if we crash, restart
RestartSec=1
Restart=on-failure

# output goes to /var/log/syslog
StandardOutput=syslog
StandardError=syslog

# This will default to "bundler" if we don't specify it
SyslogIdentifier=sidekiq

[Install]
WantedBy=multi-user.target