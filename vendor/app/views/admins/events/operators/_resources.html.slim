.poke-card-wide.mdl-card.mdl-shadow--2dp
  .mdl-card__title
    .mdl-cell.mdl-cell--12-col
      i.material-icons import_export
      | Staff Management
  .mdl-card__supporting-text
    .table-responsive
      table.mdl-data-table.mdl-js-data-table.within-card
        tbody
          tr
            td.mdl-data-table__cell--non-numeric = link_to "Staff", [:admins, @current_event, :customers, operator: true]
            td
              = @current_event.customers.where(operator: true).count if @current_event.customers.where(operator: true).any?
          tr
            td.mdl-data-table__cell--non-numeric = link_to "Gtags", [:admins, @current_event, :gtags, operator: true]
            td
              = @current_event.gtags.where(operator: true).count if @current_event.gtags.where(operator: true).any?
              = link_to [:new, :admins, @current_event, :gtag, operator: true] do
                span.material-icons add_circle_outline
          tr
            td.mdl-data-table__cell--non-numeric = link_to "Ticket Types", [:admins, @current_event, :ticket_types, operator: true]
            td
              = @current_event.ticket_types.where(operator: true).count if @current_event.ticket_types.where(operator: true).any?
              = link_to [:new, :admins, @current_event, :ticket_type, operator: true] do
                span.material-icons add_circle_outline
          tr
            td.mdl-data-table__cell--non-numeric = link_to "Tickets", [:admins, @current_event, :tickets, operator: true]
            td
              = @current_event.tickets.where(operator: true).count if @current_event.tickets.where(operator: true).any?
              = link_to [:new, :admins, @current_event, :ticket, operator: true] do
                span.material-icons add_circle_outline
          tr
            td.mdl-data-table__cell--non-numeric = link_to "Permissions", [:admins, @current_event, :operator_permissions, operator: true]
            td
              = @current_event.operator_permissions.count if @current_event.operator_permissions.any?
              = link_to [:new, :admins, @current_event, :operator_permission] do
                span.material-icons add_circle_outline