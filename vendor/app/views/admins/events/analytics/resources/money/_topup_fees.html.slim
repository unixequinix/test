.content-grid.mdl-grid
  = render 'admins/events/analytics/shared/export_buttons', title: 'Online Topup Fee Analytics',
          excel_path: sub_report_admins_event_analytics_path(@current_event, format: "xls", analytics: { data: "money_topup_fees" }),
          pdf_path: sub_report_admins_event_analytics_path(@current_event, format: "pdf", analytics: { data: "money_topup_fees" })

  .mdl-layout-spacer
  .mdl-cell.mdl-cell--12-col.analytics
    table.pvtTable
      thead
        tr
          th.pvtColLabel.empty
          - @dates.each do |date|
            th.pvtColLabel.high-contrast = date
          th.pvtColLabel.high-contrast Totals

      tbody

        - @payments.each do |payment|
          - data = @current_event.money_online_orders_fee(payment_filter: payment)
          tr
            th.pvtRowLabel.low-contrast = payment.humanize

            - @dates.each do |date|
              td = number_to_reports(data[date])
            td.pvtTotal.rowTotal.totals = number_to_reports(data.values.sum)



        tr
          th.pvtRowLabel.low-contrast Totals
          - data = @current_event.money_online_orders_fee

          - @dates.each do |date|
            td.pvtTotal.rowTotal.totals = number_to_reports(data[date].to_f)

          td.pvtTotal.rowTotal.totals = number_to_reports(data.values.sum)


  .mdl-layout-spacer

.no-pdf= render 'admins/events/analytics/shared/line_chart', chart_data: @pos_views, name: 'Fees per hour'
