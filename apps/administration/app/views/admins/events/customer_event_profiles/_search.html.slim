p.menu-header
  = fa_icon "search"
  | Search

= search_form_for q, url: search_admins_event_customer_event_profiles_path, html: { novalidate: true, class: "searchForm" }  do |f|
  .container-search
    = f.input :customer_name_cont, label: t("admin.customers.search.name"), placeholder: t("admin.customers.search.name")
    = f.input :customer_surname_cont, label: t("admin.customers.search.surname"), placeholder: t("admin.customers.search.surname")
    = f.input :customer_email_cont, label: t("admin.customers.search.email"), placeholder: t("admin.customers.search.email")
    = f.input :active_tickets_assignment_id_not_null, as: :select, label: t("admin.customers.search.tickets")
    = f.input :active_gtag_assignment_id_not_null, as: :select, label: t("admin.customers.search.gtag_registrations")
    = f.input :credit_purchased_logs_id_not_null, as: :select, label: t("admin.customers.search.credits_purchased")
    = f.submit class: "btn btn-secondary"