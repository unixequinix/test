- breadcrumb :admins_event_credit, current_event, @credit
- provide :actions do
  = link_to edit_admins_event_credit_path(@current_event, @credit), class: "btn btn-action btn-action-edit small" do
    = fa_icon 'edit'
    = t('actions.edit')
  = link_to admins_event_credits_path, class: "btn btn-action btn-action-back small" do
    = fa_icon 'arrow-circle-left'
    = t('actions.back')
  
.wrapper-negative-space
  .container-show
    dl
      dt = t("admin.general.id")
      dd = @credit.id
      dt = t("admin.general.name")
      dd = @credit.catalog_item.name
      dt = t("admin.general.description")
      dd = @credit.catalog_item.description && "-"
      dt = t("admin.accesses.step")
      dd = @credit.catalog_item.step
      dt = t("admin.accesses.initial_amount")
      dd = @credit.catalog_item.initial_amount
      dt = t("admin.accesses.max_purchasable")
      dd = @credit.catalog_item.max_purchasable
      dt = t("admin.accesses.min_purchasable")
      dd = @credit.catalog_item.min_purchasable
      dt = t("admin.general.created_at")
      dd = @credit.created_at.strftime("%y-%m-%d %H:%M:%S")
      dt = t("admin.general.updated_at")
      dd = @credit.updated_at.strftime("%y-%m-%d %H:%M:%S")
