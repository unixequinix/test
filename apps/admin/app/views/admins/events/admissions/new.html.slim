- breadcrumb :new_admins_event_customer_event_profile_admission, current_event, @customer_event_profile
- provide :actions do
  = link_to t("actions.back"), admins_event_customer_event_profile_path(current_event, @customer_event_profile), class: "btn btn-action btn-action-back small"

= form_tag admins_event_customer_event_profile_admissions_path(current_event, @customer_event_profile) do |f|
  .wrapper-negative-space
    = hidden_field_tag :customer_event_profile_id, @customer_event_profile.id
    .input
      = label_tag t('admin.admissions.ticket')
      = text_field_tag :ticket_number, nil, placeholder: t('admissions.placeholders.ticket_number')
    = submit_tag t('gtag_registrations.button'), class: "btn btn-primary"